  <div class="container px-4 py-5" id="hanging-icons">
    <h2 class="pb-2 border-bottom">自分の投稿</h2>
    <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
      <% @user_posts.each do |user_post| %>
        <% if user_post.user_id == current_user.id %>
          <div class="col d-flex align-items-start">
            <div class="icon-square bg-light text-dark flex-shrink-0 me-3">
              <svg class="bi" width="1em" height="1em"><use xlink:href="#toggles2"/></svg>
            </div>
            <div>
              <h2><%= link_to user_post.menu.name, user_post_path(user_post.id) %>の依頼</h2>
              <p><%= user_post.comment %></p>
              <% if user_post.post_room %>
              <%= link_to 'チャットルームへ', user_post_post_rooms_path(user_post.id),  class:"btn btn-primary" %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

