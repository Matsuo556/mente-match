        <%# <input type="checkbox" value="remember-me">  %>
        <%# <%= f.check_box value: "remember-me" %>
        <%# Remember me %>
      <%# </label> %>
    <%# </div> %>
    <%# <button class="w-100 btn btn-lg btn-primary" type="submit">新規登録する</button> %>
