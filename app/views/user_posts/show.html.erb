<%= render "shared/header" %>

<%# 商品の概要 %>
<div class="item-show">
  <div class="item-box">
    <h2 class="name">
      <%= @user_post.user.nickname %>
    </h2>


    <%# <% if user_signed_in? && @item.purchase_record == nil %>
      <%# <% if current_user.id == @item.user_id %>
    <% if user_signed_in? && current_user.id == @item.user_id %>
        <%# <%= link_to "投稿の編集", edit_item_path(@item.id), method: :get, class: "item-red-btn" %>
        <%= link_to "投稿の編集", '#', method: :get, class: "item-red-btn" %>
        <p class="or-text">or</p>
        <%# <%= link_to "削除", item_path(@item.id), method: :delete, class:"item-destroy" %>
        <%= link_to "削除", '#', method: :delete, class:"item-destroy" %>
    <% end %>

    <% if biz_user_signed_in? %>
        <%= link_to "マッチングを申し込む", '#' ,class:"item-red-btn"%>
    <% end %>


    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">メンテ要望日時</th>
          <td class="detail-value"><%= @user_post.requested_at %></td>
        </tr>
        <tr>
          <th class="detail-item">メンテメニュー</th>
          <td class="detail-value"><%= @user_post.menu[:name] %></td>
        </tr>
        <tr>
          <th class="detail-item">コメント</th>
          <td class="detail-value"><%= @user_post.comment %></td>
        </tr>
      </tbody>
    </table>
    
    <div class="option">
      <div class="favorite-btn">
        <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"20",height:"20"%>
        <span>お気に入り 0</span>
      </div>
      <div class="report-btn">
        <%= image_tag "flag.png" ,class:"report-flag-icon" ,width:"20",height:"20"%>
        <span>不適切な商品の通報</span>
      </div>
    </div>

  </div>

</div>